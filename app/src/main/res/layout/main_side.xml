<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131525"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_user_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_listview_main_pressed"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_headPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:src="@drawable/pic_user_me" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pic_headPic"
            android:text="liuyuan"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/pic_idnext"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#070918" />

    <ListView

        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#070918"
        android:choiceMode="singleChoice"
        android:divider="#070918"
        android:dividerHeight="1dp" />

</LinearLayout>
